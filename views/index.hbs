<a href="/todos/new" class="btn btn-success mb-3">Create</a>
<ul class="list-group">
	{{#each todos}}
	<li class="list-group-item">
		<div class='row'>
			<div class="col-auto mr-auto">
				<input style="vertical-align: middle;"type="checkbox" name="isDone" {{#if this.isDone }} checked {{/if}} disabled>
				<h4 style="display:inline; vertical-align: middle;">
					{{this.name}}
				</h4>
			</div>
			<div class="col-auto">
				<a class='btn btn-primary' href="./todos/{{this.id}}">Details</a>	
				<a class='btn btn-success' href="./todos/{{this.id}}/edit">Edit</a>
				<form action="./todos/{{this.id}}?_method=DELETE" method="POST" style="display: inline;">
					<button class='btn btn-danger' type="submit">Delete</button>
				</form>
			</div>
		</div>
	</li>
	{{/each}}
</ul>